<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:padding="50dp"
        android:src="@drawable/pokemon"
        android:id="@+id/iv_logo_pokemon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_logo_pokemon"
        android:id="@+id/title_login"
        android:paddingLeft="40dp"
        android:text="Login"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/title_login"
        android:padding="48dp"
        android:id="@+id/ly_register"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:hint="Enter Your Email"
            android:padding="10dp"
            android:background="@drawable/edittext_bottom_border"
            android:id="@+id/input_email"
            android:fontFamily="@font/poppins"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="10dp"
            android:hint="Enter Your Password"
            android:padding="10dp"
            android:background="@drawable/edittext_bottom_border"
            android:id="@+id/input_password"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ly_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="14dp"
        android:fontFamily="@font/poppins"
        android:text="Login"
        android:background="@drawable/rounded_button"
        android:id="@+id/btn_login"
        android:contentDescription="Login Button"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_new_acc"
        android:text="New to Pokedex?"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_login"
        android:layout_toRightOf="@id/tv_new_acc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/new_register"
        android:text="Register"
        android:textColor="@color/primaryColor"
        android:fontFamily="@font/poppins"
        />

</RelativeLayout>